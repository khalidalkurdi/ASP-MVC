@model Company
<div class="card border-0 shadow my-5">
    <div class="card-header bg-gradient bg-secondary py-3 ms-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" text-white py-2">@(Model.Id!=0?"Update":"Create") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <input asp-for="@Model.Id" hidden />
                        <div class=" form-floating py-3 col-12">
                            <label asp-for="@Model.Name" class="ms-0"></label>
                            <input asp-for="@Model.Name" class="form-control border-0 shadow" />
                            <span class="text-danger" asp-validation-for="@Model.Name"></span>
                        </div>
                        <div class="form-floating py-3 col-12">
                            <label asp-for="@Model.PhoneNumber" class="ms-0 "></label>
                            <input asp-for="@Model.PhoneNumber" class="form-control border-0 shadow" />
                            <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
                        </div>
                        <div class="form-floating py-3 col-12">
                            <label asp-for="@Model.Country" class="ms-0 "></label>
                            <input asp-for="@Model.Country" class="form-control border-0 shadow" />
                            <span class="text-danger" asp-validation-for="@Model.Country"></span>
                        </div>
                        <div class="form-floating py-3 col-12">
                            <label asp-for="@Model.City" class="ms-0 "></label>
                            <input asp-for="@Model.City" class="form-control border-0 shadow" />
                            <span class="text-danger" asp-validation-for="@Model.City"></span>
                        </div>
                        <div class="form-floating py-3 col-12">
                            <label asp-for="@Model.StreetAddress" class="ms-0 "></label>
                            <input asp-for="@Model.StreetAddress" class="form-control border-0 shadow" />
                            <span class="text-danger" asp-validation-for="@Model.StreetAddress"></span>
                        </div>
                        <div class="form-floating py-3 col-12">
                            <label asp-for="@Model.PostalCode" class="ms-0 "></label>
                            <input asp-for="@Model.PostalCode" class="form-control border-0 shadow" />
                            <span class="text-danger" asp-validation-for="@Model.PostalCode"></span>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <input type="submit" value="Update Company" class="btn btn-primary form-control" />
                                }
                                else
                                {
                                    <input type="submit" value="Create Company" class="btn btn-primary form-control" />
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-outline-secondary form-control" asp-area="Admin" asp-controller="Company" asp-action="Index">Back to home</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}